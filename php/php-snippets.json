{
"PHP Skeleton": {
	"prefix": "phh",
	"body": [
		"php$1?>"
	],
	"description": "Just add PHP enclosing tags."
},
"Basic function skeleton": {
	"prefix": "fff",
	"body": [
		"function $1 ($2) {",
		"\t$3",
		"}"
	]
},
"if isset for $_GET": {
	"prefix": "iisg",
	"body": [
		"if(isset(\\$_GET['$1'])) {",
		"\t$2",
		"}"
	]
},
"if isset for $_POST": {
	"prefix": "iisp",
	"body": [
		"if(isset(\\$_POST['$1'])) {",
		"\t$2",
		"}"
	]
},
"if isset for $_SESSION": {
	"prefix": "iiss",
	"body": [
		"if(isset(\\$_SESSION['$1'])) {",
		"\t$2",
		"}"
	]
},
"if !isset for $_GET": {
	"prefix": "niisg",
	"body": [
		"if(!isset(\\$_GET['$1'])) {",
		"\t$2",
		"}"
	]
},
"if !isset for $_POST": {
	"prefix": "niisp",
	"body": [
		"if(!isset(\\$_POST['$1'])) {",
		"\t$2",
		"}"
	]
},
"if !isset for $_SESSION": {
	"prefix": "niiss",
	"body": [
		"if(!isset(\\$_SESSION['$1'])) {",
		"\t$2",
		"}"
	]
},
"New $_GET var": {
	"prefix": "gg",
	"body": "\\$_GET['$1']"
},
"New $_POST var": {
	"prefix": "pp",
	"body": "\\$_POST['$1']"
},
"New $_SESSION var": {
	"prefix": "ss",
	"body": "\\$_SESSION['$1']"
},
"Try Catch": {
	"prefix": "tr",
	"body": [
		"try {",
			"\t$1",
			"} catch ($2){",
				"\t$3",
			"}"
			]
}
}
